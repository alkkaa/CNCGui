<Page x:Class="CNCGui.Pages.BaseMidSideBarPanels.SidePanel1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CNCGui.Pages.BaseMidSideBarPanels"
      mc:Ignorable="d" 
      d:DesignHeight="780" d:DesignWidth="280"
      Title="SidePanel1">
    <Page.Resources>
        <Storyboard x:Key="SidePanelRight">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="-140,0,0,0" To="0,0,0,0" DecelerationRatio="0.3" Duration="0:0:0.5"/>
        </Storyboard>

        <Storyboard x:Key="SidePanelLeft">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="-140,0,0,0" DecelerationRatio="0.3" Duration="0:0:0.5"/>
        </Storyboard>
    </Page.Resources>

    <Grid x:Name="gridSidePanelBase">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="140"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="gridSidePanelLeft" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
            </Grid.RowDefinitions>
            <!--<TextBlock Text="G Functions" TextWrapping="Wrap" TextAlignment="Center"/>-->
            <!--TextWrapping="Wrap"-->
            <Button x:Name="butGFunctions" Style="{StaticResource SidePanelButton}" Grid.Row="0" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="butGFunctionsClick">
                <TextBlock Text="G Functions" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butAuxiliaryFunctions" Style="{StaticResource SidePanelButton}" Grid.Row="1" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="butGFunctionsClick">
                <TextBlock Text="Aux Functions" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butBasicBlocks" Style="{DynamicResource SidePanelButton}" Grid.Row="2" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butGFunctionsClick">
                <TextBlock Text="Basic Blocks" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butTimeCounter" Style="{DynamicResource SidePanelButton}" Grid.Row="3" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butGFunctionsClick">
                <TextBlock Text="Time Counter" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butProgramLevels" Style="{DynamicResource SidePanelButton}" Grid.Row="4" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butGFunctionsClick">
                <TextBlock Text="Program Levels" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butSpare" Style="{DynamicResource SidePanelButton}" Grid.Row="5" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butGFunctionsClick">
                <TextBlock Text="Spare" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butSpare2" Style="{DynamicResource SidePanelButton}" Grid.Row="6" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butGFunctionsClick">
                <TextBlock Text="Spare2" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butSpare3" Style="{DynamicResource SidePanelButton}" Grid.Row="7" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butGFunctionsClick">
                <TextBlock Text="Spare3" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butSpare4" Style="{DynamicResource SidePanelButton}" Grid.Row="8" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butGFunctionsClick">
                <TextBlock Text="Spare3" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butSidePanel1Next" Style="{DynamicResource SidePanelButton}" Grid.Row="9" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" ToolTip="Close Menu" Click="butSidePanel1NextClick">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="/CNCGui;component/Resources/Icons/iconRight.png" Width="40" Height="40"/>
                </Grid>
            </Button>
        </Grid>

        <Grid x:Name="gridSidePanelRight" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
                <RowDefinition Height="78"/>
            </Grid.RowDefinitions>
            <!--<TextBlock Text="G Functions" TextWrapping="Wrap" TextAlignment="Center"/>-->
            <!--TextWrapping="Wrap"-->
            <Button x:Name="butGFunctions1" Style="{StaticResource SidePanelButton}" Grid.Row="0" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="butGFunctionsClick">
                <TextBlock Text="G Functions" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butAuxiliaryFunctions1" Style="{StaticResource SidePanelButton}" Grid.Row="1" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="butGFunctionsClick">
                <TextBlock Text="Aux Functions" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butBasicBlocks1" Style="{DynamicResource SidePanelButton}" Grid.Row="2" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butGFunctionsClick">
                <TextBlock Text="Basic Blocks" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butTimeCounter1" Style="{DynamicResource SidePanelButton}" Grid.Row="3" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butGFunctionsClick">
                <TextBlock Text="Time Counter" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butProgramLevels1" Style="{DynamicResource SidePanelButton}" Grid.Row="4" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butGFunctionsClick">
                <TextBlock Text="Program Levels" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butSpare11" Style="{DynamicResource SidePanelButton}" Grid.Row="5" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butGFunctionsClick">
                <TextBlock Text="Spare" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butSpare22" Style="{DynamicResource SidePanelButton}" Grid.Row="6" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butGFunctionsClick">
                <TextBlock Text="Spare2" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butSpare13" Style="{DynamicResource SidePanelButton}" Grid.Row="7" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butGFunctionsClick">
                <TextBlock Text="Spare3" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butSpare14" Style="{DynamicResource SidePanelButton}" Grid.Row="8" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butGFunctionsClick">
                <TextBlock Text="Spare3" TextAlignment="Center"/>
            </Button>
            <Button x:Name="butSidePanel1Back" Style="{DynamicResource SidePanelButton}" Grid.Row="9" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" ToolTip="Close Menu" Click="butSidePanel1BackClick">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="1" Source="/CNCGui;component/Resources/Icons/iconLeft.png" Width="40" Height="40"/>
                </Grid>
            </Button>
        </Grid>
    </Grid>
</Page>
