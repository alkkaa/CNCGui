<Page x:Class="CNCGui.Pages.KeyboardFunc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CNCGui.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="310" d:DesignWidth="200"
      Title="KeyboardFunc">

    <Grid x:Name="gridNumpad" Margin="10,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="butNextWindow"  Grid.Column="0" Grid.Row="0" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butNextWindowClick">
            <StackPanel x:Name="spButNextWindow" Orientation="Vertical">
                <Image Source="/CNCGui;component/Resources/Icons/iconNextWindow.png" Width="58" Height="40"/>
                <!--<Label x:Name="lblButNextWindow" FontSize="7" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="18" Content="Next Window"/>-->
            </StackPanel>
        </Button>
        <Button x:Name="butUp"          Grid.Column="1" Grid.Row="0" FontSize="40" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="▲" Click="butUpClick"/>
        <Button x:Name="butPageUp"    Grid.Column="2" Grid.Row="0" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butPageUpClick">
            <StackPanel x:Name="spButPageUp" Orientation="Vertical">
                <Image Source="/CNCGui;component/Resources/Icons/iconFile.png" RenderTransformOrigin="0.5,0.5" Width="40" Height="40">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="270"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Label x:Name="lblButPageUp" FontSize="9" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="20" Content="Page Up"/>
            </StackPanel>
        </Button>
        <Button x:Name="butLeft"    Grid.Column="0" Grid.Row="1" FontSize="40" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="◄" Click="butLeftClick"/>
        <Button x:Name="butO"       Grid.Column="1" Grid.Row="1" FontSize="50" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="O" Click="butOClick"/>
        <Button x:Name="butRight"   Grid.Column="2" Grid.Row="1" FontSize="40" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="►" Click="butRightClick"/>
        <Button x:Name="butEnd"     Grid.Column="0" Grid.Row="2" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="END" Click="butEndClick"/>
        <Button x:Name="butDown"    Grid.Column="1" Grid.Row="2" FontSize="50" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="▼" Click="butDownClick"/>
        <Button x:Name="butPageDown" Grid.Column="2" Grid.Row="2" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Click="butPageDownClick">
            <StackPanel x:Name="spButPageDown" Orientation="Vertical">
                <Image Source="/CNCGui;component/Resources/Icons/iconFile.png" RenderTransformOrigin="0.5,0.5" Width="40" Height="40" >
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="90"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Label x:Name="lblButPageDown" FontSize="9" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="20" Content="Page Down"/>
            </StackPanel>
        </Button>
        <Button x:Name="butBackspace"   Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="Backspace"  Click="butBackspaceClick"/>
        <Button x:Name="butEnter"       Grid.Column="2" Grid.Row="3" Grid.RowSpan="2" Background="#FF93ABD1" Focusable="False" Click="butEnterClick">
            <StackPanel x:Name="spButEnter" Orientation="Vertical">
                <Image Source="/CNCGui;component/Resources/Icons/iconInput.png" Width="40" Height="40" />
                <Label x:Name="lblButEnter" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Enter"/>
            </StackPanel>
        </Button>
        <Button x:Name="butDel"     Grid.Column="0" Grid.Row="4" FontSize="18" Background="#FF93ABD1" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="Del" Click="butDelClick"/>
        <Button x:Name="butInsert"  Grid.Column="1" Grid.Row="4" FontSize="18" Background="#FF93ABD1" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="Insert" Click="butInsertClick"/>

    </Grid>
</Page>
