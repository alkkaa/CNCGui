<Page x:Class="CNCGui.Pages.Numpad"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CNCGui.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="310" d:DesignWidth="200"
      Title="Numpad">

    <Grid x:Name="gridNumpad" Margin="10,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="butZero"    Grid.Column="1" Grid.Row="3" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="0" Click="butZeroClick"/>
        <Button x:Name="butOne"     Grid.Column="0" Grid.Row="2" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="1" Click="butOneClick"/>
        <Button x:Name="butTwo"     Grid.Column="1" Grid.Row="2" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="2" Click="butTwoClick"/>
        <Button x:Name="butThree"   Grid.Column="2" Grid.Row="2" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="3" Click="butThreeClick"/>
        <Button x:Name="butFour"    Grid.Column="0" Grid.Row="1" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="4" Click="butFourClick"/>
        <Button x:Name="butFive"    Grid.Column="1" Grid.Row="1" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="5" Click="butFiveClick"/>
        <Button x:Name="butSix"     Grid.Column="2" Grid.Row="1" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="6" Click="butSixClick"/>
        <Button x:Name="butSeven"   Grid.Column="0" Grid.Row="0" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="7" Click="butSevenClick"/>
        <Button x:Name="butEight"   Grid.Column="1" Grid.Row="0" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="8" Click="butEightClick"/>
        <Button x:Name="butNine"    Grid.Column="2" Grid.Row="0" FontSize="18" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="9" Click="butNineClick"/>
        <Button x:Name="butMinus"   Grid.Column="0" Grid.Row="3" FontSize="22" Background="#FF93ABD1" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="-" Click="butMinusClick"/>
        <Button x:Name="butPlus"    Grid.Column="2" Grid.Row="4" FontSize="18" Background="#FF93ABD1" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="+" Click="butPlusClick"/>
        <Button x:Name="butDiv"     Grid.Column="0" Grid.Row="4" FontSize="18" Background="#FF93ABD1" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="/" Click="butDivClick"/>
        <Button x:Name="butMul"     Grid.Column="1" Grid.Row="4" FontSize="18" Background="#FF93ABD1" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="*" Click="butMulClick"/>
        <Button x:Name="butPoint"   Grid.Column="2" Grid.Row="3" FontSize="18" Background="#FF93ABD1" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False" Content="." Click="butPointClick"/>
    </Grid>
</Page>
