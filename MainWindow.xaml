<Window x:Class="CNCGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CNCGui"
        mc:Ignorable="d"
        AllowsTransparency="False"
        Background="Transparent" 
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="True"
        WindowStartupLocation="Manual"
        Title="MainWindow" Height="1920" Width="1080">
    <Grid x:Name="gridBase" Height="1900" Width="1080" Background="#FFA1B2DC">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1030"/>
            <RowDefinition Height="815"/>
        </Grid.RowDefinitions>
        <Grid x:Name="gridStatusIcon" Grid.Row="0" VerticalAlignment="Top" Background="#FFC7CDDD">
            <Frame x:Name="frameStatusBar" Grid.Column="0" Source="Pages/StatusBar.xaml" NavigationUIVisibility="Hidden"/>
            <!-- for status icon -->
        </Grid>
        <Grid x:Name="gridBaseMid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="940"/>
                <ColumnDefinition Width="140"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <!-- for manufacturer logo and date time -->
                <RowDefinition Height="30"/>
                <!-- for file path -->
                <RowDefinition Height="30"/>
                <!-- for nc program status -->
                <RowDefinition Height="400"/>
                <!-- for axis, tool, feedrate and spindle data's -->
                <RowDefinition Height="530"/>
                <!-- for nc program show -->
            </Grid.RowDefinitions>
            <Grid x:Name="gridLogo" Grid.Row="0" Grid.Column="0">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="1,1" MappingMode="RelativeToBoundingBox" StartPoint="0,0">
                        <GradientStop Color="#FFC7C7C7"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Image x:Name="ımgLogo" Width="150" Source="/CNCGui;component/Resources/Images/logoKebaGrayResize.png" Margin="770,0,0,0"/>
            </Grid>
            <Grid x:Name="gridBaseMidSidePanel" Grid.Column="1" Grid.RowSpan="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="240"/>
                    <!-- for information -->
                    <RowDefinition Height="10"/>
                    <!-- for splitter -->
                    <RowDefinition Height="780"/>
                    <!-- for function buttons -->
                </Grid.RowDefinitions>
                <Frame x:Name="frameInformation" Grid.Row="0" Source="Pages/Information.xaml" NavigationUIVisibility="Hidden"/>
                <Frame x:Name="frameBaseMidSidePanelButton" Grid.Row="2" Source="Pages/BaseMidSideBarPanels/SidePanel1.xaml" NavigationUIVisibility="Hidden"/>
                <!-- for information -->
            </Grid>
            <Label x:Name="lblNCFilePath" Grid.Column="0" Grid.Row="1" Background="#FF6EAE6E" Foreground="White" FontFamily="Arial" FontSize="17" Content="NCFilePath"/>
            <Frame x:Name="frameBaseMidTop" Grid.Row="3" Source="Pages/ATFSData.xaml" NavigationUIVisibility="Hidden"/>
            <!-- for status icon FF535E7C-->
            <Frame x:Name="frameBaseMidBottom" Grid.Row="4" Source="Pages/NCProgramMonitor.xaml" NavigationUIVisibility="Hidden"/>
            <!-- for status icon -->
            <!--<GridSplitter Grid.Row="3" Height="5"/>-->
        </Grid>
        <Grid x:Name="gridBaseBottom" Grid.Row="2" Background="#FFC7CDDD">
            <!-- for keyboard create https://www.youtube.com/watch?v=t8oVVPAOcZA&ab_channel=PaulOamen -->
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="310"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            <Grid x:Name="gridBaseBottomUp" Grid.Row="0">
                <Frame x:Name="frameBaseBottomUpPanel" Source="Pages/BaseBottomSideBarPanels/BottomPanel1.xaml" NavigationUIVisibility="Hidden"/>
            </Grid>
            <Grid x:Name="gridBaseBottomMid" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="680"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Frame x:Name="frameBottomMidLeft" Grid.Column="0" Source="Pages/EmbeddedKeyboard.xaml" NavigationUIVisibility="Hidden"/>
                <!-- for keyboard and options -->
                <Frame x:Name="frameBottomMidCenter" Grid.Column="1" Source="Pages/Numpad.xaml" NavigationUIVisibility="Hidden"/>
                <!-- for numeric keypad -->
                <Frame x:Name="frameBottomMidRight" Grid.Column="2" Source="Pages/KeyboardFunc.xaml" NavigationUIVisibility="Hidden"/>
                <!-- for keyboard functions -->

            </Grid>
            <Grid x:Name="gridBaseBottomDown" Grid.Row="2">

            </Grid>
        </Grid>
    </Grid>
</Window>
